<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorGreenRipple</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.ISAAcron.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="colorControlHighlight">@color/colorGreenRipple</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog_background</item>
    </style>

    <style name="AuthorizationTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@android:color/white</item>
    </style>

    <style name="LightGrayRippleTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/colorDarkWhiteRipple</item>
    </style>

    <style name="AppTheme.NavigationView">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="TextAppearance.Acron.Popup.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_xs2</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Acron.Popup.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_xs2</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.Acron.Popup.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:paddingLeft">@dimen/spacing_zero</item>
        <item name="android:paddingRight">@dimen/spacing_zero</item>
        <item name="android:paddingTop">@dimen/spacing_s</item>
        <item name="android:paddingBottom">@dimen/spacing_s</item>
        <item name="android:insetTop">@dimen/spacing_zero</item>
        <item name="android:insetBottom">@dimen/spacing_zero</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <!-- Общий стиль для всех TableRow -->
    <style name="TableRowStyle">
        <item name="android:layout_marginBottom">@dimen/info_packet_negotiation_margin_button</item>
    </style>

    <!-- Общий стиль для TextView -->
    <style name="LabelTextStyle">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="ValueTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>
    
    <style name="StatusPacketStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/text_view_padding_left</item>
        <item name="android:background">@drawable/button_lilac_packet_status</item>
        <item name="android:padding">@dimen/text_view_padding_status_packet</item>
        <item name="android:text">@string/status_packet_negotiation</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_size_status_packet</item>
    </style>

    <dimen name="text_size_xs2">14sp</dimen>
    <dimen name="spacing_zero">0dp</dimen>
    <dimen name="spacing_s">8dp</dimen>
</resources>
