<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_popup_approve_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingStart="@dimen/item_popup_menu_padding_horizontal"
    android:paddingTop="@dimen/item_popup_menu_padding_vertical"
    android:paddingEnd="@dimen/item_popup_menu_padding_horizontal"
    android:paddingBottom="@dimen/item_popup_menu_padding_vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/packet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/item_popup_menu_simple_tv_title_margin_start"
        android:textColor="@color/colorDarkGray"
        tools:text="@string/packet_negotiation_text" />

</LinearLayout>